.modal
  background rgba(#000, .9)
  width 100%
  height 100%
  min-height 100%
  display block
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index 998
.modal_box
  background #fff
  border-radius 6px
  box-shadow 0 4px 30px rgba(#000,.4)
  padding 20px
  width 500px
  margin 50px auto 0;
  box-sizing border-box
  position fixed
  top 0
  left 0
  right 0
  z-index 999
  h1
    font-size 26px
  .modalClose
    background red
    border-radius 6px
    padding 6px 10px
    cursor pointer
    position absolute
    right 16px
    top 16px
    font-style normal
    font-weight bold
    font-size 20px
    color #fff
