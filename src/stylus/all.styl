*
  background transparent

/* All.styl */
html, body
  height auto
  margin 0
  padding 0
  width 100%

body
  background linear-gradient(#000 + 60, color1)
  box-sizing border-box
  color #444
  font-family Arial
  font-size 16px
  font-weight bold
  height 100%
  min-height 100%
  overflow-x hidden
  padding 20px
  position relative
  +mobile()
    background linear-gradient(#000 + 60, color2)
  +tablet()
    background linear-gradient(#000 + 60, color3)
  +desktop()
    background url("./assets/bg-paper.jpg") center bottom no-repeat fixed
    background-size cover
  &:before
    background linear-gradient(rgba(#000,.6),rgba(#000,.8))
    content ""
    display block
    height 100%
    left 0
    position absolute
    top 0
    width 100%
    z-index -1

hr
  border 0
  border-bottom 4px double  #eee
  margin 10px auto

h1
  font-size 60px
  text-shadow 10px 10px 20px rgba(#000, .1)
  a
    font-size inherit

.br-mobile
  display block

a
  color #fff
  font-size 18px
  text-decoration none
  line-height 30px
  transition .5s all

