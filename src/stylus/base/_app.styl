.app
  center()
  background rgba(#eee,.9)
  box-sizing border-box
  border-radius 10px 0 10px 10px
  box-shadow 0 0 0 1px #fff, 0 0 30px rgba(#000,.1)
  padding 10px 0
  margin 0 auto
  //max-width 924px
  width 100%
  font-family 'Abel', sans-serif
  font-size 16px
  letter-spacing .8px
  -webkit-user-select none  /* Chrome 49+ */
  -moz-user-select none    /* Firefox 43+ */
  -ms-user-select none     /* No support yet */
  user-select none
  -webkit-tap-highlight-color rgba(255, 255, 255, 0) !important
  -webkit-focus-ring-color rgba(255, 255, 255, 0) !important
  outline none !important
  will-change opacity, translate, scale
  transition .4s background
  z-index 9
  position relative
  &:hover
    background #eee
    z-index 666
  &:before
    content ""
    display block
    width 100%
    height 100%
    background #fff
  &>hr:last-of-type
    border-color  #ccc
  .text-left
    text-align left
  .text
    margin 0 !important
    padding 0 !important
    font-size 16px
    line-height 16px
  .btn-plus
    margin-right 16px

  .btn-plus, .btn-less
    width 30px
    height 30px
    border 2px solid #999
    background rgba(#fff,0)
    border-radius 100%
    color #666
    outline none
    line-height 0
    font-size 20px
    font-weight 100
    float right
    transition .2s all
    cursor pointer
    position relative
    &:hover
      color #fff
      background #666
      transform scale(1.3)
      transition .2s all
    &:active
      transform scale(1)
      transition .2s all
    & i
      position relative
      font-style normal
    &.btn-less i
      top -2px

  .section
    clear both

    p
      font-weight 600
      padding 20px 10px 10px 10px
      clear both
