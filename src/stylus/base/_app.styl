.app
  center()
  background rgba(#eee,.9)
  box-sizing border-box
  border-radius 10px 0 10px 10px
  box-shadow 0 0 0 1px #fff, 0 0 30px rgba(#000,.1)
  padding 10px 0
  margin 0 auto
  width 100%
  font-family 'Abel', sans-serif
  font-size 16px
  letter-spacing .8px
  -webkit-user-select none  /* Chrome 49+ */
  -moz-user-select none    /* Firefox 43+ */
  -ms-user-select none     /* No support yet */
  user-select none
  -webkit-tap-highlight-color rgba(255, 255, 255, 0) !important
  -webkit-focus-ring-color rgba(255, 255, 255, 0) !important
  outline none !important
  will-change opacity, translate, scale
  transition .4s background
  z-index 9
  position relative
  &:hover
    background #eee
    z-index 666
  &:before
    content ""
    display block
    width 100%
    height 100%
    background #fff
  & > hr:last-of-type
    border-color  #ccc
  .text-left
    text-align left
  .text
    margin 0 !important
    padding 0 !important
    font-size 16px
    line-height 16px
  .btn-plus
    margin-right 16px

  .btn-plus, .btn-less
    width 30px
    height 30px
    border 2px solid #999
    background rgba(#fff,0)
    border-radius 100%
    color #666
    outline none
    line-height 0
    font-size 20px
    font-weight 100
    float right
    transition .2s all
    cursor pointer
    position relative
    &:hover
      color #fff
      background #666
      transform scale(1.3)
      transition .2s all
    &:active
      transform scale(1)
      transition .2s all
    & i
      position relative
      font-style normal
    &.btn-less i
      top -2px
  .section
    clear both
    p
      font-weight 600
      padding 20px 10px 10px 10px
      clear both
  +mobile()
    label
      width 50% !important
      box-sizing border-box
      float left
      &[for|="GET-courseabout"]
        width 100% !important
        clear both
        float none
  +tablet()
    max-width 90%
    .btn-plus, .btn-less
      float left
      margin 0
      top -4px
    .btn-plus
      margin 0 10px
    label
      &[for|="GET-dateofbirth"]
        width 25% !important
  +desktop()
    max-width 70%
    label
      border-right 1px solid #eee !important
      box-sizing border-box
      float left
      width 33.3% !important
      &[for|="GET-dateofbirth"]
        width 33.3% !important
      &[for|="GET-courseabout"],
        clear both
        float none
        width 100% !important
      &[for|="GET-maritalstatus"]
        width 25% !important
        &:hover
          border 0 !important
      &[for|="GET-travel-yes"],
      &[for|="GET-travel-no"]
        text-align center
        width 50% !important
        & input
          display inline-block !important
          float none !important
          position relative
          top -5px
      &:hover
        border 0 !important
      &[for|="GET-cep"],
      &[for|="GET-address-number"],
      &[for|="GET-coursedate-1"],
      &[for|="GET-coursedate-2"],
      &[for|="GET-coursedate-3"],
      &[for|="GET-coursedate-4"]
        width 16.7% !important
        &:hover
          border 0 !important
